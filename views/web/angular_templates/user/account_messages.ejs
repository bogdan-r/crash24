<div class="main-box-header clearfix">
  <h2>Сообщения</h2>
</div>
<div class="main-box-body clearfix">


<section class="b-user-messages">
  <div class="tabs-wrapper">
    <ul class="nav nav-tabs">
      <li class="active" >
        <a href="#ForMe" data-toggle="tab">Для меня</a>
      </li>
      <li >
        <a href="#FromMe" data-toggle="tab">От меня</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade active in" id="ForMe">
        <article class="b-user-messages__item" ng-repeat="incidentMess in messagesByIncident.forMe">
          <div class="b-user-messages__item__img-wrap">
            <img class="b-user-messages__item__img" ng-src="{{incidentMess.video_thumbnail_small}}" alt=""/>
          </div>
          <div class="b-user-messages__item__content">
            <div class="b-user-messages__item__title">
              {{incidentMess.title}}
            </div>
            <div class="b-user-messages__users-wrap">
              <div class="b-user-messages__users" ng-repeat="user in incidentMess.users"
                   ng-click="showDialog(incidentMess, user, 'forMe')">
                <img class="b-user-messages__users__img" ng-src="{{userMessageThumb(user)}}" alt=""/>

                <div class="b-user-messages__users__content ">{{user.messages[user.messages.length-1].text}}</div>
              </div>
            </div>
          </div>
        </article>
      </div>

      <div class="tab-pane fade" id="FromMe">
        <article class="b-user-messages__item" ng-repeat="incidentMess in messagesByIncident.fromMe">
          <div class="b-user-messages__item__img-wrap">
            <img class="b-user-messages__item__img" ng-src="{{incidentMess.video_thumbnail_small}}" alt=""/>
          </div>
          <div class="b-user-messages__item__content">
            <div class="b-user-messages__item__title">
              {{incidentMess.title}}
            </div>
            <div class="b-user-messages__users-wrap">
              <div class="b-user-messages__users" ng-repeat="user in incidentMess.users"
                   ng-click="showDialog(incidentMess, user, 'fromMe')">
                <img class="b-user-messages__users__img" ng-src="{{userMessageThumb(user)}}" alt=""/>

                <div class="b-user-messages__users__content ">{{user.messages[user.messages.length-1].text}}</div>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>

</div>