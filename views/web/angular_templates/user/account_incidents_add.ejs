<h1>Добавить видео</h1>

<form ng-submit="addIncident(incidentParam)" class="b-add-incident">
    <div class="form-group">
        <label for="">Заголовок</label>
        <input type="text" ng-model="incidentParam.title" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="">Дата</label>
        <input type="date" ng-model="incidentParam.date" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="">Описание</label>
        <textarea ng-model="incidentParam.description" class="form-control"></textarea>
    </div>

    <ya-map class="b-add-incident__map" ya-zoom="8" ya-center="[55.76, 37.64]" ya-controls="" ya-after-init="afterMapInit($target)" >
    </ya-map>

    <!--Для тестирования-->
    <div class="form-group clearfix">
        <label for="" style="display: block">Координаты</label>
        <div class="col-xs-6" style="padding-left: 0"><input placeholder="Ширина" type="text" ng-model="incidentParam.lat" class="form-control"/></div>
        <div class="col-xs-6" style="padding-right: 0"><input placeholder="Долгота" type="text" ng-model="incidentParam.long" class="form-control"/></div>
    </div>
    <div class="form-group">
        <label for="">Место</label>
        <input type="text" ng-model="incidentParam.place" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-default">Добавить видео</button>
</form>