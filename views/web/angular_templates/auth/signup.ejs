<div class="b-registration marginAuto jumbotron">
    <h1 class="b-registration-headline">Регистрация</h1>

    <form action="" class="form" ng-submit="signup(user)">
        <div class="form-group">
            <label for="reg_username" class="control-label ">Имя пользователя *</label>
            <input type="text" class="form-control" id="reg_username" ng-model="user.username"/>
        </div>
        <div class="form-group">
            <label for="reg_email" class="control-label ">E-mail *</label>
            <input type="email" class="form-control" id="reg_email" ng-model="user.email"/>
        </div>
        <div class="form-group">
            <label for="reg_password" class="control-label ">Пароль *</label>
            <input type="password" class="form-control" id="reg_password" ng-model="user.password"/>
        </div>
        <button type="submit" class="btn btn-primary">Зарегестрироваться</button>
    </form>
</div>
