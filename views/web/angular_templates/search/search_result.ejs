<div class="b-placer">
    <div class="b-result">
        <div class="b-result__current">
            <div class="b-result__headline" ng-hide="locationIncidents.length == 0">
                Результат по запросу: <span class="b-result__headline__selected">{{place}}</span>
            </div>
            <div ng-show="locationIncidents.length == 0" class="b-result__not-fount">
                По запросу {{place}}, ничего не найдено
            </div>

            <a ui-sref="search.showitem({id : incident.id})" ng-repeat="incident in locationIncidents | orderBy:predicate:reverse"  class="b-result__item">
                <div class="b-result__item__pic">
                    <img ng-src="{{incident.video_thumbnail_small}}" alt=""/>
                </div>
                <div class="b-result__item__content">
                    <h2 class="b-result__item__headline">{{incident.title}}</h2>
                    <date class="b-result__item__date">{{incident.date | date:'dd.MM.yyyy'}}</date>
                    <div class="b-result__item__place">{{incident.place}}</div>
                </div>
            </a>
        </div>

        <div class="b-result__current-city" ng-hide="userLocationIncidents.length == 0">
            <div class="b-result__headline">Ближайшие аварии в городе: <span class="b-result__headline__selected">{{cityInfo.name}}</span></div>
            <a ui-sref="search.showitem({id : incident.id})" ng-repeat="incident in userLocationIncidents | orderBy:predicate:reverse"  class="b-result__item">
                <div class="b-result__item__pic">
                    <img ng-src="{{incident.video_thumbnail_small}}" alt=""/>
                </div>
                <div class="b-result__item__content">
                    <h2 class="b-result__item__headline">{{incident.title}}</h2>
                    <date class="b-result__item__date">{{incident.date | date:'dd.MM.yyyy'}}</date>
                    <div class="b-result__item__place">{{incident.place}}</div>
                </div>
            </a>
        </div>

        <div class="b-result__other" ng-hide="otherIncidents.length == 0">
            <div class="b-result__headline">Остальное</div>
            <a ui-sref="search.showitem({id : incident.id})" ng-repeat="incident in otherIncidents | orderBy:predicate:reverse"  class="b-result__item">
                <div class="b-result__item__pic">
                    <img ng-src="{{incident.video_thumbnail_small}}" alt=""/>
                </div>
                <div class="b-result__item__content">
                    <h2 class="b-result__item__headline">{{incident.title}}</h2>
                    <date class="b-result__item__date">{{incident.date | date:'dd.MM.yyyy'}}</date>
                    <div class="b-result__item__place">{{incident.place}}</div>
                </div>
            </a>
        </div>

    </div>
</div>